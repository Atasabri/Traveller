@model Traveller.Models.Task
    @using Traveller.Models
@{
    ViewBag.Title = "اضافة مهمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-primary text-center"> اضافة مهمة</h3>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="card-body text-center">
                <div class="input-states">
                    <form class="form-horizontal" action="~/Admins/AddTask" method="post">
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">اسم المهمة</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Task1, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Task1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">اسم الادمن</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("ToAdmin", new SelectList(new DB().Admins.Where(x=>x.IsManager==false),"ID","UserName"),"- Select Admin -",new { @class = "form-control",@required= "required" })
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">اضافة</button>
                    </form>
                    @if(ViewBag.error!=null)
                    {
                        <span style="color:red">@ViewBag.error</span>
                    }
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
</div>
<!-- End Page wrapper  -->

