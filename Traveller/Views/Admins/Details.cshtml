@model Traveller.Models.Admin

@{
    ViewBag.Title = Model.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-primary text-center">@Model.UserName </h3>
        </div>
    </div>

    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid" style="text-align:center;">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2>اسم المستخدم</h2>
                    </div>
                    <h4>@Model.UserName</h4>
                    <div class="card-body">
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2>كلمة المرور</h2>
                    </div>
                    <h4>**********</h4>
                    <div class="card-body">
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2>الصلاحية</h2>
                    </div>
                    <h4>مدير ؟ @Html.DisplayFor(model => model.IsManager) </h4>
                    <div class="card-body">
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2>الصورة</h2>
                    </div>
                    <div class="card-body">
                        <img src="~/Uploads/Admins/@(Model.ID).jpg" width="100" height="100" style="border-radius:50%" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Container fluid  -->
</div>

<!-- End Page wrapper  -->