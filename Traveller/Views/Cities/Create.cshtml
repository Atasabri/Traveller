@model Traveller.Models.City
@using Traveller.Models
@{
    ViewBag.Title = "اضافة مدينة ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-primary text-center">اضافة مدينة  </h3>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="card-body text-center">
                <div class="input-states">
                    <form class="form-horizontal" action="~/Cities/Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">الاسم</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">دائرة عرض</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Log, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Log, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">خط طول</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Lat, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Lat, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>                             
                           <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">اسم الدولة</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Country_ID", new SelectList(new DB().Countries, "ID", "Name"), "-Select Country -", new { @class = "form-control", @required = "required" })

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">تقرير</label>
                                <div class="col-md-8">
                                    <input type="file" multiple name="Reports" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">صور</label>
                                <div class="col-md-8">
                                    <input type="file" required multiple name="Photos" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">صورة الخلفية</label>
                                <div class="col-md-8">
                                    <input type="file" required multiple name="PhotoBack" />
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">اضافة</button>
                    </form>
                    @if (ViewBag.error != null)
                    {
                        <span style="color:red">@ViewBag.error</span>
                    }
                    @if (ViewBag.Done != null)
                    {
                        <span style="color:green">@ViewBag.Done</span>
                    }
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->

</div>
<!-- End Page wrapper  -->