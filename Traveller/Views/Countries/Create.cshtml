@model Traveller.Models.Country

@{
    ViewBag.Title = "اضافة دولة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-primary text-center">اضافة دولة </h3>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="card-body text-center">
                <div class="input-states">
                    <form class="form-horizontal" action="~/Countries/Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">الاسم</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">دائرة العرض</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Log, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Log, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">خط الطول</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Lat, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Lat, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">رقم الشرطة</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Police_Number, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Police_Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">رقم الاسعاف</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Ambulance_Number, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ambulance_Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">رقم الاطفاء</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Fire_Number, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Fire_Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">العملة</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Currency, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">اسم العملة</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.CurrencyName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CurrencyName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">التاريخ </label>
                                <div class="col-md-8">
                                    <textarea id="TextArea1" name="History"  rows = "8" cols = "43"></textarea>
                                    @Html.ValidationMessageFor(model => model.History, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">القواعد </label>
                                <div class="col-md-8">
                                    <textarea id="TextArea1" name="Roles"  rows="8" cols="43"></textarea>
                                    @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">الصورة</label>
                                <div class="col-md-8">
                                    <input type="file" required name="Photo" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">التاريخ   PDF</label>
                                <div class="col-md-8">
                                    <input type="file" accept=".pdf" name="HistoryPDF" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-md-4">القواعد PDF</label>
                                <div class="col-md-8">
                                    <input type="file" accept=".pdf" name="RolesPDF" />
                                </div>
                            </div>
                        </div>
                        
                        <button class="btn btn-primary" type="submit">اضافة</button>
                    </form>
                    @if (ViewBag.error != null)
                    {
                        <span style="color:red">@ViewBag.error</span>
                    }
                    @if (ViewBag.Done != null)
                    {
                        <span style="color:green">@ViewBag.Done</span>
                    }
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->


</div>
<!-- End Page wrapper  -->