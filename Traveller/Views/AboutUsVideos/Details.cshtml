@model Traveller.Models.AboutUsVideo

@{
    ViewBag.Title = "تفاصيل الفيديو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-primary text-center">تفاصيل الفيديو </h3>
        </div>
    </div>

    <div class="container-fluid">
        <a href="~/AboutUsVideos/Edit/@Model.ID" class="btn btn-success"> تعديل الفيديو</a>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid" style="text-align:center;">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2>تفاصيل الفيديو </h2>
                    </div>
                    <h4>@Model.Description</h4>
                    <div class="card-body">
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h2> الفيديو</h2>
                    </div>
                    <h4>
                        <video controls="controls" width="500" height="500">
                            <source src="~/Uploads/AboutUsVideos/@(Model.ID).mp4" type="video/mp4" />
                        </video>
                    </h4>
                    <div class="card-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Container fluid  -->
</div>
<!-- End Page wrapper  -->
